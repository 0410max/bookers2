<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="header-left">
        <li>
          <%= link_to "Bookers", root_path,class:'bookers' %>
        </li>
      </div>
      <div class="header-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Log out", destroy_user_session_path,class:'header-li', method: :delete %>
          </li>
          <li>
            <%= link_to "Books", books_path,class:'header-li' %>
          </li>
          <li>
            <%= link_to "Users", users_path,class:'header-li' %>
          </li>
          <li>
            <%= link_to "Home", user_path(current_user.id),class:'header-li' %>
          </li>
        <% else %>
          <li>
            <%= link_to "Log in", new_user_session_path,class:'header-li' %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path,class:'header-li' %>
          </li>
          <li>
            <%= link_to "About", about_path,class:'header-li' %>
          </li>
          <li>
            <%= link_to "Home", root_path,class:'header-li' %>
          </li>
        <% end %>
      </div>
    </div>
    <p class="flash"><%= flash[:notice] %></p>
    <%= yield %>
  </body>
</html>
