<div class="container">
    <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">
          <div class="user-info">
            <h2>User info</h2>
            <%= form_with model:@user,local:true do |f| %>
                <p>Name</p>
                <%= f.text_field :name %>
                <p>Image</p>
                <%= f.attachment_field :image %>
                <p>Introduction</p>
                <%= f.text_area :introduction %>
                <p><%= f.submit 'Update User' %></p>
            <% end %>
          </div>
        </div>
        <div class="col-lg-3">
        </div>
    </div>
</div>
