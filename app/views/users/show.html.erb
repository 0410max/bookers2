<% if @book.errors.any? %>
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list', book: @book,user: @user %>
    </div>

    <div class="col-lg-1"></div>

    <div class="col-lg-8">
        <h2 class="books">Books</h2>
        <table class="table table-hover">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <% @books.each do |book| %>
            <tbody>
              <td><%= attachment_image_tag @user, :image, fallback: "default.png", size: "30x30"%></td>
              <td><%= link_to book.book_title, book_path(book.id) %></td>
              <td><%= book.opinion %></td>
            </tbody>
          <% end %>
        </table>
    </div>

  </div>
</div>
