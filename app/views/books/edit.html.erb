<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>

        <div class="col-lg-6">
            <div class="user-info">
                <h2 class="editing">Editing Book</h2>
                <p>Title</p>
                <%= form_with model:@book,local:true do |f| %>
                    <%= f.text_field :book_title,class:'text_field' %>
                    <p class="opinion">Opinion</p>
                    <%= f.text_area :opinion,class:'text_area' %>
                    <p><%= f.submit 'Update Book',class:'btn create_book btn-success btn-sm' %></p>
                <% end %>
                <%= link_to 'Show',book_path(@book.id) %> | <%= link_to 'Back',books_path %>
            </div>
        </div>

        <div class="col-lg-3"></div>
    </div>
</div>
<p class="main-bottom" style="text-align: center;" >CopyRight Infratop.inc</p>

