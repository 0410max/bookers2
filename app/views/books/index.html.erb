<% if @book.errors.any? %>
  <div class="error">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book,user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="books">Books</h2>
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <td>
              <%= link_to user_path(book.id) do %>
                <%= attachment_image_tag book.user, :profile_image, fallback: "default.png", size: "30x30" %>
              <% end %>
            </td>
            <td><%= link_to  book.title ,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>
