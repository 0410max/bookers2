<% if @book.errors.any? %>
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'list', book: @new_book,user: @book.user %>
    </div>

    <div class="col-lg-1"></div>

    <div class="col-lg-8">
      <h2 class="book_detail">Book detail</h2>
      <table class="table table">
        <tbody>
          <td><%= attachment_image_tag @book.user, :image, fallback: "default.png", size: "30x30"%><p><%= link_to @book.user.name,user_path(@book.user.id) %></p></td>
          <td><%= link_to @book.book_title,book_path(@book.id) %></td>
          <td><%= @book.opinion %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit',edit_book_path(@book.id),class:'btn btn-success btn-sm' %></td>
            <td><%= link_to 'Destroy',book_path,method: :delete,class:'btn btn-danger btn-sm',data: {confirm: 'Are you sure?'} %></td>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
